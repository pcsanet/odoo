<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_pcsa" model="ir.ui.view">
        <field name="name">account.move.form.inherit.pcsa</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_payment_term_id']" position="after">
                <field name="metodo_pago"/>
                <field name="sunat_estado" readonly="1"/>
                <field name="sunat_cdr" readonly="1"/>
                <field name="sunat_mensaje" readonly="1" widget="textarea"/>
            </xpath>
        </field>
    </record>
</odoo>